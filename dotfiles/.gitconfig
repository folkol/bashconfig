[diff]
    tool = pycharm
[difftool "pycharm"]
    cmd = /usr/local/bin/pycharm diff "$LOCAL" "$REMOTE" && echo "Press enter to continue..." && read
[merge]
    tool = pycharm
    keepBackup = false
[mergetool "pycharm"]
    cmd = /usr/local/bin/pycharm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[diff "ansible-vault"]
    cachetextconv = false
    textconv = viewvault.sh
[mergetool]
    keepBackup = false

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /Users/folkol/.gitignore_global

[alias]
    new = log -u --since='1 week ago'
    co = checkout
    st = status
    ci = commit
    di = diff
    each = for-each-ref --format='%(refname:short)'
    wd = diff --word-diff=color --word-diff-regex '[a-z_]+|.'
    root = rev-parse --show-toplevel

[push]
    default = upstream
