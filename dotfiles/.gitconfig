[user]
        name = Matte
        email = mattias.johansson@atex.com

[merge]
        renameLimit = 10000

[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
        co = checkout
	st = status
	ci = commit
	di = diff
        new-branches = for-each-ref --count=30 --sort=-committerdate --format='%(refname:short)'

[push]
	default = simple
