[merge]
    renameLimit = 10000

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /Users/folkol/.gitignore_global

[alias]
    co = checkout
    st = status
    ci = commit
    di = diff
    each = for-each-ref --format='%(refname:short)'
    hot = for-each-ref --count=30 --sort=-committerdate refs/remotes/ --format='%(refname:short)'

[push]
    default = upstream

[diff "ansible-vault"]
    cachetextconv = false
    textconv = viewvault.sh
